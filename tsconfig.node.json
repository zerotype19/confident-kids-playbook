{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": ["react", "react-dom", "react-router-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/frontend/src/*"]
    }
  },
  "include": ["src/main.tsx", "src/types.ts", "src/frontend/**/*.{ts,tsx}"],
  "exclude": ["node_modules", "src/frontend/node_modules"],
  "references": [{ "path": "./tsconfig.json" }]
} 